<Window x:Class="Minesweeper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800"
        x:Name="window">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <ComboBox Height="50">
                <ComboBoxItem Content="Beginner"/>
                <ComboBoxItem Content="Intermediate"/>
                <ComboBoxItem Content="Expert"/>
            </ComboBox>
            <Button x:Name="BtnRestart" Grid.Column="1" Click="BtnRestart_Click" Content="Genstart" FontSize="16" FontWeight="DemiBold"/>
            <TextBlock x:Name="TbTimer" Grid.Column="2" />
        </Grid>
        <Grid x:Name="grid" Grid.Row="1">
            <!-- Populated with buttons in the code-behind -->
        </Grid>
    </Grid>
</Window>
